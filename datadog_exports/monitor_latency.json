{
    "name": "EchoOps: High Latency Detected in PaymentService",
    "type": "query alert",
    "query": "avg(last_5m):avg:trace.fastapi.request.hits{service:sentinel-ai} > 0.5",
    "message": "High Latency Detected. Triggering EchoOps Voice Incident Response @webhook-EchoOps-Suspend",
    "tags": [
        "service:sentinel-ai",
        "env:production",
        "team:sre"
    ],
    "options": {
        "thresholds": {
            "critical": 0.5,
            "warning": 0.3
        },
        "notify_audit": false,
        "include_tags": true,
        "notify_no_data": false,
        "renotify_interval": 0
    }
}