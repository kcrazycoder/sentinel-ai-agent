{
    "title": "EchoOps: Voice Command War Room",
    "description": "Real-time Incident Response Dashboard with Voice Integration",
    "widgets": [
        {
            "definition": {
                "type": "iframe",
                "url": "https://sentinel-ai-967479678472.us-central1.run.app/static/index.html"
            },
            "layout": {
                "x": 0,
                "y": 0,
                "width": 6,
                "height": 4
            }
        },
        {
            "definition": {
                "type": "manage_status",
                "summary_type": "monitors",
                "query": "service:(sentinel-ai OR echo-ops)",
                "sort": "status,asc",
                "title": "System Detection Rules (Monitors)",
                "hide_zero_counts": false,
                "show_last_triggered": true
            },
            "layout": {
                "x": 6,
                "y": 0,
                "width": 6,
                "height": 4
            }
        },
        {
            "definition": {
                "title": "Latency Heatmap",
                "type": "trace_service",
                "env": "production",
                "service": "sentinel-ai",
                "span_name": "agent.thought",
                "show_breakdown": true
            },
            "layout": {
                "x": 0,
                "y": 4,
                "width": 6,
                "height": 4
            }
        },
        {
            "definition": {
                "title": "Safety: Refusals (Refusal/Block)",
                "type": "timeseries",
                "requests": [
                    {
                        "q": "sum:echo_ops.intent.refusal{service:sentinel-ai}.as_count()"
                    }
                ]
            },
            "layout": {
                "x": 6,
                "y": 4,
                "width": 6,
                "height": 4
            }
        },
        {
            "definition": {
                "title": "LLM Usage (Tokens)",
                "type": "timeseries",
                "requests": [
                    {
                        "q": "sum:echo_ops.llm.tokens.total{service:sentinel-ai}.as_count()"
                    }
                ]
            },
            "layout": {
                "x": 0,
                "y": 8,
                "width": 6,
                "height": 4
            }
        },
        {
            "definition": {
                "title": "Error Rate (Actionable Signals)",
                "type": "query_value",
                "requests": [
                    {
                        "q": "sum:trace.fastapi.request.errors{service:sentinel-ai}.as_count()"
                    }
                ],
                "autoscale": true
            },
            "layout": {
                "x": 6,
                "y": 8,
                "width": 6,
                "height": 4
            }
        }
    ],
    "template_variables": [],
    "layout_type": "ordered",
    "notify_list": [],
    "reflow_type": "fixed",
    "pause_auto_refresh": false
}